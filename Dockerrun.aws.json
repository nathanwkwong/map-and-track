{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "nathanwkwong/map-and-track-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "nathanwkwong/map-and-track-server",
            "hostname": "api",
            "essential": false,
            "memory": 512,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "awslogs-server",
                    "awslogs-region": "ap-northeast-2",
                    "awslogs-stream-prefix": "awslogs-map-and-track"
                }
            },
            "mountPoints": [
                {
                  "sourceVolume": "awseb-logs-server",
                  "containerPath": "/var/log/server"
                }
              ]
        },
        {
            "name": "nginx",
            "image": "nathanwkwong/map-and-track-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client",
                "server"
            ]
        }
    ]
}